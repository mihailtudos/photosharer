<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Title</title>
    <link rel="stylesheet" href="/assets/styles.css">
</head>
<body>
    {{ template "navbar" .}}
    {{ if errors}}
        {{range errors}}
            <div id="alert-2" class="flex 0 rounded-lg my-1 px-4" role="alert">
                <div class="p-4 flex items-center justify-between bg-red-50 w-full text-red-80">
                    <svg class="flex-shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                    </svg>
                    <span class="sr-only">Info</span>
                    <div class="ms-3 text-sm font-medium">
                        {{ . }}
                    </div>
                    <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-2" aria-label="Close">
                        <span class="sr-only">Close</span>
                        <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                        </svg>
                    </button>
                </div>
            </div>
        {{end}}
    {{end}}
    {{ template "content" .}}
    {{ template "footer" .}}
    <script type="text/javascript" src="https://www.dropbox.com/static/api/2/dropins.js" id="dropboxjs" data-app-key="rn2soxf90nepdxg"></script>
    <script type="text/javascript">
        function setupDropbox() {
            let dbxForm = document.getElementById("dropbox-chooser-form")
            if (dbxForm === null) {
                return;
            }
            let options = {
                success: function(files) {
                    for (let i = 0; i < files.length; i++) {
                        let input = document.createElement("input");
                        input.type = "hidden";
                        input.name = "files"
                        input.value = files[i].link;
                        dbxForm.append(input);
                    }

                    dbxForm.submit();
                    // alert("Here's the file link: " + files[0].link)
                },
                linkType: "direct", // or "preview"
                multiselect: true, // or true
                extensions: ['images'],
                folderselect: false, // or true
            };

            let button = Dropbox.createChooseButton(options);
            dbxForm.appendChild(button);
        }

        setupDropbox();
    </script>
</body>
</html>